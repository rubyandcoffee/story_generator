<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Characters</h1>
      <%= link_to 'New Character', new_character_path, class: 'btn btn-success' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h2>Name</h2>
    </div>
    <div class="col-md-4">
      <h2>Character type</h2>
    </div>
    <div class="col-md-4">
      <h2>Actions</h2>
    </div>
  </div>

  <% @characters.each do |character| %>
  <div class="row">
    <div class="col-md-4">
      <p><%= character.name %></p>
    </div>
    <div class="col-md-4">
      <p><%= character.character_type %></p>
    </div>
    <div class="col-md-4">
      <div class="btn-group" role="group">
        <%= link_to 'Edit', edit_character_path(character), type: 'button', class: 'btn btn-info' %>
        <%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } , type: 'button', class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <% end %>

</div>
