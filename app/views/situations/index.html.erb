<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Situations</h1>
      <%= link_to 'New Situation', new_situation_path, class: 'btn btn-success' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h2>Name</h2>
    </div>
    <div class="col-md-4">
      <h2>Situation type</h2>
    </div>
    <div class="col-md-4">
      <h2>Actions</h2>
    </div>
  </div>

  <% @situations.each do |situation| %>
  <div class="row">
    <div class="col-md-4">
      <p><%= situation.name %></p>
    </div>
    <div class="col-md-4">
      <p><%= situation.situation_type %></p>
    </div>
    <div class="col-md-4">
      <div class="btn-group" role="group">
        <%= link_to 'Edit', edit_situation_path(situation), type: 'button', class: 'btn btn-info' %>
        <%= link_to 'Destroy', situation, method: :delete, data: { confirm: 'Are you sure?' } , type: 'button', class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
  <% end %>

</div>

